@model IEnumerable<WebsiteQuanLyNhaAn.Models.TaiKhoan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TestLayoutPageAdmin.cshtml";
}

<br />
<div class="container bootstrap snippet">
    <div class="row">
        <div class="col-lg-3 col-sm-6">
            <div class="circle-tile ">
                <a href="#"><div class="circle-tile-heading red"><i class="fa fa-users fa-fw fa-3x"></i></div></a>
                <div class="circle-tile-content red">
                    <div class="circle-tile-description text-faded"> Tài Khoản Đã Đăng Kí </div>
                    <div class="circle-tile-number text-faded ">@ViewBag.Count</div>

                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-6">
            <div class="circle-tile ">
                <a href="#">
                    <div class="circle-tile-heading dark-blue">
                        <i class="fa  fa-money
 fa-fw fa-3x"></i>
                    </div>
                </a>
                <div class="circle-tile-content dark-blue">
                    <div class="circle-tile-description text-faded">Tổng Số Tiền</div>
                    <div class="circle-tile-number text-faded ">@ViewBag.Total VNĐ</div>

                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-6">
            <div class="circle-tile ">
                <a href="#">
                    <div class="circle-tile-heading blue-sea">
                        <i class="fa   fa-comments-o fa-fw fa-3x"></i>
                    </div>
                </a>
                <div class="circle-tile-content blue-sea">
                    <div class="circle-tile-description text-faded">Phản Hồi Mới</div>
                    <div class="circle-tile-number text-faded ">24</div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-6">
            <div class="circle-tile ">
                <a href="#">
                    <div class="circle-tile-heading count-food">
                        <i class="fa fa-cutlery fa-fw fa-3x"></i>
                    </div>
                </a>
                <div class="circle-tile-content count-food">
                    <div class="circle-tile-description text-faded">Tổng Số Món Ăn</div>
                    <div class="circle-tile-number text-faded ">@ViewBag.Food</div>
                </div>
            </div>
        </div>

    </div>
</div>
<br />
<h3>Danh Sách Nhân Viên Đã Có Tài Khoản</h3>



<div class="row">
    <div class="col-md-7">
        <table class="table table-hover">
            <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.MaNV)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pass)
                </th>

                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaNV)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pass)
                    </td>



                    <td>
                        @*@Html.ActionLink("Edit", "Edit", new {id = item.MaNV}, new {@class = "btn btn-danger"}) |*@
                        <a href="@Url.Action("Edit/" + item.MaNV, "TaiKhoan")" class="btn btn-danger">
                            <i class="fa fa-pencil-square-o" aria-hidden="true"></i> Chỉnh Sửa
                        </a>
                        @*@Html.ActionLink("Details", "Details", new {id = item.MaNV}, new {@class = "btn btn-info"}) |
                                @Html.ActionLink("Delete", "Delete", new {id = item.MaNV}, new {@class = "btn btn-warning"})*@

                        <a href="@Url.Action("Delete/" + item.MaNV, "TaiKhoan")" class="btn btn-warning"><i class="fa fa-trash-o" aria-hidden="true"></i> Xóa Tài Khoản</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <div class="col-md-3">
        <p>
            @*@Html.ActionLink("Tạo Mới Tài Khoản", "Create","TaiKhoan")*@
            <a href="@Url.Action("DanhSachNhanVien","TaiKhoan")" class="btn btn-primary"><i class="fa fa-address-card" aria-hidden="true"></i> Danh Sách Nhân Viên Chưa Có Tài Khoản</a>
        </p>
    </div>
</div>


