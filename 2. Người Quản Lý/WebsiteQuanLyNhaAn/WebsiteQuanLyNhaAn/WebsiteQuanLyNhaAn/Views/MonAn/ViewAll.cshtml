@model IEnumerable<WebsiteQuanLyNhaAn.Models.MonAn>

@{
    ViewBag.Title = "ViewAll";
    Layout = null;
}


<table class="table table-striped table-condensed" id="employeeTable">
    <thead>
        <tr>
            <th>
                <span style="display: none;">@Html.DisplayNameFor(model => model.MaMonAn)</span>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenMonAn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoaiMonAn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DonGia)
            </th>
            <th> @Html.DisplayNameFor(model => model.Images)</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <span style="display: none;">@Html.DisplayFor(modelItem => item.MaMonAn)</span>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenMonAn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LoaiMonAn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DonGia)
                </td>
                <td>


                    <img src="@item.Images" width="100" height="100" style="border-radius: 50%" alt="Image" />
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" onclick="Edit('@Url.Action("AddOrEdit", "MonAn", new {id = @item.MaMonAn})')" data-toggle="tooltip" title="Chỉnh Sửa!"><i class="fa fa-pencil fa-lg"></i> Chỉnh Sửa</a>
                    <a class="btn btn-danger btn-sm" onclick="Delete('@Url.Action("Delete", "MonAn", new {id = @item.MaMonAn})')" data-toggle="tooltip" title="Xóa!"><i class="fa fa-trash fa-lg"></i> Xóa Món Ăn</a>
                </td>
            </tr>


        }
    </tbody>
</table>
