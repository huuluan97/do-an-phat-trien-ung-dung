@{
    var myList = Model.GroupBy(x => x.NgayLenThucDon).Select(x => new { NgayLenThucDon = x.Key, MonAn = x });
}



<style>
    #now {
        color: red;
        font-family: 'Cormorant Garamond';
        border-bottom: 3px solid #e66c7e;
        font-size: 48px;
        font-weight: 400;
        line-height: 72px;
        letter-spacing: 10px;
        margin-bottom: 57px;
        text-align: center;
        text-indent: 24px;
        text-transform: uppercase;
    }
</style>
<div class="row" id="checkEmpty">



    @foreach (var ngay in myList)
    {

        <div class="col-md-12" style="text-align:center;">
            <hr class="style17" />
            <h5 id="now" style="color:red; text-transform: uppercase;font-size:30px;">
                Thực đơn ngày : @ngay.NgayLenThucDon.ToString(string.Format("dd/MM/yyyy"))<br />

            </h5>
            @{                 
                if (@ngay.NgayLenThucDon.ToString(string.Format("dd/MM/yyyy")) == DateTime.Today.ToString(string.Format("dd/MM/yyyy")))
                {
                        <script>
                            $("#now").text("Thực Đơn Của Ngày Hôm Nay");
                        </script>

                  }
               
                }
            <div id="checkEmpty">
                <div>
                    <div class="row" style="font-size:30px; color: blue;">
                        <div class="col-md-4">
                            <span>
                                Tên Món Ăn
                            </span>
                        </div>
                        <div class="col-md-4">
                            Giá Tiền
                        </div>
                        <div class="col-md-4">
                            Loại Món Ăn
                        </div>
                    </div>
                </div>
               
                @foreach (var mon in ngay.MonAn)
                {

                    <div style="font-size: 20px; color: red;">



                        <div class="row">
                            <div class="col-md-4">
                                <span>
                                    @Html.DisplayFor(modelItem => mon.MonAn.TenMonAn, new {@class = "ClassFont"})
                                </span>
                            </div>
                            <div class="col-md-4">
                                @Html.DisplayFor(modelItem => mon.MonAn.DonGia, new {@class = "ClassFont"}) VNĐ
                            </div>
                            <div class="col-md-4">
                                @Html.DisplayFor(modelItem => mon.MonAn.LoaiMonAn)
                            </div>
                        </div>



                        <br/>
                    </div>
                }
            </div>

        </div>

    }


</div>

