<h1 style="color: blue; text-align: center; font-size: 50px;">Thực Đơn Đã Có</h1>
@{
    var myList = Model.GroupBy(x => x.NgayLenThucDon).Select(x => new { NgayLenThucDon = x.Key, MonAn = x });
}




<div class="row">



    @foreach (var ngay in myList)
    {

        <div class="col-md-12" style="text-align:center;">
            <hr class="style17" />
            <h3 id="now" style="color:red;">
                Thực đơn ngày : @ngay.NgayLenThucDon.ToString(string.Format("dd/MM/yyyy"))<br />

            </h3>
            @{
                if (@ngay.NgayLenThucDon.ToString(string.Format("dd/MM/yyyy")) == DateTime.Today.ToString(string.Format("dd/MM/yyyy")))
                {
                    <script>
                        $("#now").text("Thực Đơn Của Ngày Hôm Nay");
                    </script>

                }
                //else if(@ngay.NgayLenThucDon.ToString(string.Format("dd/MM/yyyy")))
                //{
                    
                //}
            }
            <article>
                @foreach (var mon in ngay.MonAn)
                {

                    <span>
                        @Html.DisplayFor(modelItem => mon.MonAn.TenMonAn) :
                    </span>
                        <span>
                            @Html.DisplayFor(modelItem => mon.MonAn.DonGia)
                        </span>


                        <br />
                }
            </article>

        </div>

                }


</div>

