                <div class="circle-tile-content blue-sea">
                    <div class="circle-tile-description text-faded">Phản Hồi Mới</div>
                    <div class="circle-tile-number text-faded ">24</div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-6">
            <div class="circle-tile ">
                <a href="#">
                    <div class="circle-tile-heading count-food">
                        <i class="fa fa-cutlery fa-fw fa-3x"></i>
                    </div>
                </a>
                <div class="circle-tile-content count-food">
                    <div class="circle-tile-description text-faded">Tổng Số Món Ăn</div>
                    <div class="circle-tile-number text-faded ">@ViewBag.Food</div>
                </div>
            </div>
        </div>

    </div>
</div>
<br />






@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Lên Thực Đơn</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">

            <strong class="col-md-2 control-label">Tên Món </strong>
            <div class="col-md-10">
                @Html.DropDownList("MaMonAn", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaMonAn, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NgayLenThucDon, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NgayLenThucDon, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NgayLenThucDon, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm Món Ăn" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay Lại Trang Thực Đơn", "TEST2", "ThucDons")
</div>
