@model WebsiteQuanLyNhaAn.Models.ThanhToan

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_TestLayoutPageAdmin.cshtml";
}

<style>
    select {
        font-size: 20px;
    }
</style>
<br />
<div class="container bootstrap snippet">
    <div class="row">
        <div class="col-lg-3 col-sm-6">
            <div class="circle-tile ">
                <a href="#"><div class="circle-tile-heading red"><i class="fa fa-users fa-fw fa-3x"></i></div></a>
                <div class="circle-tile-content red">
                    <div class="circle-tile-description text-faded"> Tài Khoản Đã Đăng Kí </div>
                    <div class="circle-tile-number text-faded ">@ViewBag.Count</div>

                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-6">
            <div class="circle-tile ">
                <a href="#">
                    <div class="circle-tile-heading dark-blue">
                        <i class="fa  fa-money
 fa-fw fa-3x"></i>
                    </div>
                </a>
                <div class="circle-tile-content dark-blue">
                    <div class="circle-tile-description text-faded">Tổng Số Tiền</div>
                    <div class="circle-tile-number text-faded ">@ViewBag.Total VNĐ</div>

                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-6">
            <div class="circle-tile ">
                <a href="#">
                    <div class="circle-tile-heading blue-sea">
                        <i class="fa   fa-comments-o fa-fw fa-3x"></i>
                    </div>
                </a>
                <div class="circle-tile-content blue-sea">
                    <div class="circle-tile-description text-faded">Phản Hồi Mới</div>
                    <div class="circle-tile-number text-faded ">24</div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-6">
            <div class="circle-tile ">
                <a href="#">
                    <div class="circle-tile-heading count-food">
                        <i class="fa fa-cutlery fa-fw fa-3x"></i>
                    </div>
                </a>
                <div class="circle-tile-content count-food">
                    <div class="circle-tile-description text-faded">Tổng Số Món Ăn</div>
                    <div class="circle-tile-number text-faded ">@ViewBag.Food</div>
                </div>
            </div>
        </div>

    </div>
</div>
<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.maNV)
        @Html.HiddenFor(model => model.tenNV)
        <div class="form-group">

            <span class="control-label col-md-2"><strong style="font-size:16px;">Tên Nhân Viên: </strong></span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.tenNV, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.tenNV, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.HiddenFor(model => model.gia, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.HiddenFor(model => model.gia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.gia, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group" style="margin-top:-15px;">
            <span class="control-label col-md-2 "><strong style="font-size:16px;">Tháng Ăn: </strong></span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.thangan, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.thangan, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2"><strong style="font-size:16px;">Trạng Thái: </strong></span>
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.status, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.DropDownListFor(model => model.status, new SelectList(new[] { "Chưa Thanh Toán", "Đã Thanh Toán" }))
                @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thanh Toán" class="btn btn-success" onclick="return SubmitForm();" />
            </div>
        </div>
    </div>
}
<script>
    function SubmitForm() {
        var r = alert("Xác nhận thanh toán tài khoản này ?");
        if (r == false) {
            return false;
        }
    }
</script>
<div>

    <a href="@Url.Action("Index","ThongKe")" class="btn btn-info">Trở Lại Danh Sách</a>
</div>
