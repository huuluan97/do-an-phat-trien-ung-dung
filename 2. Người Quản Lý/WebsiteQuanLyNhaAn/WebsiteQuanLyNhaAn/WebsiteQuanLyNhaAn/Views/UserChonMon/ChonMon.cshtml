    }
    //===========================================
    window.onload = lastDate();
    function lastDate() {
        var curr = new Date();
        var chunhat = curr.getDate() - curr.getDay();

        var thuhai = chunhat + 1;
        var thuba = chunhat + 2;
        var thutu = chunhat + 3;
        var thunam = chunhat + 4;
        var thusau = chunhat + 5;
        var thubay = chunhat + 6;
        //var chunhat1 = chunhat + 7;

        ngaythuhai = new Date(curr.setDate(thuhai)).toLocaleDateString('en-GB');
        ngaythuba = new Date(curr.setDate(thuba)).toLocaleDateString('en-GB');
        ngaythutu = new Date(curr.setDate(thutu)).toLocaleDateString('en-GB');
        ngaythunam = new Date(curr.setDate(thunam)).toLocaleDateString('en-GB');
        ngaythusau = new Date(curr.setDate(thusau)).toLocaleDateString('en-GB');
        ngaythubay = new Date(curr.setDate(thubay)).toLocaleDateString('en-GB');
        //ngaychunhat1 = new Date(curr.setDate(chunhat1)).toLocaleDateString('en-GB');

        document.getElementById("ngaythu2").innerHTML = ngaythuhai;
        document.getElementById("ngaythu3").innerHTML = ngaythuba;
